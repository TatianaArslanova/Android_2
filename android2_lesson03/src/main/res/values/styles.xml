<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WidgetTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/widgetTitle</item>
    </style>

    <style name="WidgetText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/widgetText</item>
    </style>

    <style name="WidgetImageButton">
        <item name="android:background">@color/widgetButton</item>
    </style>

    <style name="WidgetBackground">
        <item name="android:background">@color/widgetBackground</item>
    </style>

    <style name="WidgetTitle.Dark" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/widgetTitleDark</item>
    </style>

    <style name="WidgetText.Dark" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/widgetTextDark</item>
    </style>

    <style name="WidgetImageButton.Dark">
        <item name="android:background">@color/widgetButtonDark</item>
    </style>

    <style name="WidgetBackground.Dark">
        <item name="android:background">@color/widgetBackgroundDark</item>
    </style>
</resources>
