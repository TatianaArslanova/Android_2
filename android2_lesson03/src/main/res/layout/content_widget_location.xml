<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/widgetBackground"
    android:orientation="horizontal"
    android:padding="@dimen/widget_top_padding"
    tools:theme="@style/widgetDark">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/widget_top_padding">

        <TextView
            android:id="@+id/tv_latlng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/widgetTitle"
            tools:text="@string/widget_tools_text_view_latlng" />

        <TextView
            android:id="@+id/tv_location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="?attr/widgetText"
            tools:text="@string/widget_tools_text_view_location_address" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_update_location"
        android:layout_width="@dimen/widget_image_button_size"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?attr/widgetButton"
        android:padding="@dimen/widget_medium_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_replay_black_24dp" />

</LinearLayout>