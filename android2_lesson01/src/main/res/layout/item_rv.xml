<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_shadow_start_color">

    <LinearLayout
        android:padding="@dimen/rv_note_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_card_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Новая заметка" />

        <TextView
            android:id="@+id/tv_card_note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Текст заметки текст заметки текст заметки текст заметки текст заметки текст заметки текст заметки текст заметки текст заметки" />


    </LinearLayout>

</android.support.v7.widget.CardView>